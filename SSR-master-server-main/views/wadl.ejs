<?xml version="1.0" encoding="UTF-8"?>
<application xmlns="http://wadl.dev.java.net/2009/02">
  <resources base="http://localhost:puerto">
    <resource path="/">
      <method name="GET">
        <request>
          <representation mediaType="text/html"/>
        </request>
        <response>
          <representation mediaType="text/html"/>
        </response>
      </method>
    </resource>
    <resource path="/record">
      <method name="GET">
        <request>
          <param name="id_nodo" style="query" type="xs:string"/>
          <param name="temperatura" style="query" type="xs:string"/>
          <param name="humedad" style="query" type="xs:string"/>
          <param name="co2" style="query" type="xs:string"/>
          <param name="volatiles" style="query" type="xs:string"/>
        </request>
        <response>
          <representation mediaType="text/plain"/>
        </response>
      </method>
      <method name="POST">
        <request>
          <representation mediaType="application/json"/>
        </request>
        <response>
          <representation mediaType="text/plain"/>
        </response>
      </method>
    </resource>
    <resource path="/wadl">
      <method name="GET">
        <response>
          <representation mediaType="application/xml"/>
        </response>
      </method>
    </resource>
  </resources>
</application>

